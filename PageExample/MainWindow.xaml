<Window x:Class="PageExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PageExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="79*" />
            <ColumnDefinition Width="317*" />
        </Grid.ColumnDefinitions>
        <StackPanel Background="Black" Orientation="Vertical">
            <Button Click="Button_Click" Content="Ноутбуки" Background="White" FontSize="20" Margin="0 50 0 0"/>
            <Button Content="Семен" Background="White" FontSize="20"/>
            <Button Content="Про нас" Background="White" FontSize="20"/>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" x:Name="frame" Grid.Column="1" Source="Pages/HomePage.xaml">
            
        </Frame>
    </Grid>
</Window>
